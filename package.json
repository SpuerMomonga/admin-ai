{
  "name": "root",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@10.23.0",
  "engines": {
    "node": ">=18",
    "pnpm": ">=10"
  },
  "scripts": {
    "dev": "pnpm -F @admin-ai/web dev",
    "build": "pnpm -F @admin-ai/web build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "postinstall": "pnpm exec playwright install",
    "typecheck": "tsc -b",
    "test:unit": "pnpm -F @admin-ai/web test:unit",
    "test:e2e": "pnpm -F @admin-ai/web test:e2e",
    "test": "pnpm test:unit && pnpm test:e2e"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^7.2.0",
    "@playwright/test": "^1.57.0",
    "@types/node": "^22",
    "@vitest/browser-playwright": "^4.0.15",
    "eslint": "^9.39.1",
    "eslint-plugin-format": "^1.3.1",
    "eslint-plugin-svelte": "^3.13.1",
    "jsdom": "^27.4.0",
    "playwright": "^1.57.0",
    "svelte-eslint-parser": "^1.3.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1",
    "vite": "^7.2.6",
    "vite-plugin-devtools-json": "^1.0.0",
    "vitest": "^4.0.18",
    "vitest-browser-svelte": "^2.0.1"
  }
}
