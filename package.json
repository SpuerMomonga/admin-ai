{
    "name": "root",
	"private": true,
	"packageManager": "pnpm@10.23.0",
    "scripts": {
        "dev": "pnpm --filter app dev",
        "lint": "eslint .",
		"format": "eslint . --fix",
		"test:e2e": "playwright test",
		"test": "pnpm -w run test:e2e && pnpm -w run test:unit -- --run",
